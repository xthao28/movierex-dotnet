<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieRex</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/6.2.1/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieRex.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/lib/Swiper/swiper-bundle.min.css">
    <link rel="icon" href="/img/m.png" type="image/x-icon">
</head>
<body>
    <header>
        <nav class="nav navbar-expand-md fixed-top">
            <div class="container-fluid">
                <div class="logo" id="logo">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="/img/movierex.png" height="100px" style="margin: -20px 0px;">
                    </a>
                </div>
                <!-- <button class="navber-toggler" type="button" data-toggle="collapse" data-target="#menu">
                    <span class="navbar-toggler-icon"></span>
                </button> -->
                <div class="container-fluid mt-3">
                    <button class="btn btn-dark d-lg-none" type="button" id="menu-button" data-bs-toggle="offcanvas" data-bs-target="#canva">
                        <ion-icon name="menu-outline" id="but-me"></ion-icon>
                    </button>
                    <div class="dropdown" id="dropdown">
                        <a class="btn dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/img/icons8-user-25.png">
                        </a>
                        <ul class="dropdown-menu" id="dropdown-menu">
                            <li><a asp-controller="Account" asp-action="Details" asp-route-id="@ViewBag.UserName" class="dropdown-item" id="username">@ViewBag.UserName</a></li>
                            @if (ViewBag.UserName == "admin")
                            {
                                <li><a class="dropdown-item" asp-controller="Movie" asp-action="Index">Khu Vực Quản Trị</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item">Tài Khoản</a></li>
                            }
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Đăng Xuất</a></li>
                        </ul>
                    </div>
                </div>
                <div class="collapse navbar-collapse " id="menu">
                    <ul class="navbar-nav my-2">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Movie">Phim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="TV">Truyền Hình</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MovieFavourite" asp-action="Index">Danh Sách Của Tôi</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    @RenderBody()

    <div class="footer">
        <div class="social">
            <a class="footer1" href="#"><ion-icon id="facebook" name="logo-facebook"></ion-icon></a>
            <a class="footer1" href="#"><ion-icon id="instagram" name="logo-instagram"></ion-icon></a>
            <a class="footer1" href="#"><ion-icon id="twitter" name="logo-twitter"></ion-icon></a>
            <a class="footer1" href="#"><ion-icon id="youtube" name="logo-youtube"></ion-icon></a>
        </div>
        <div id="footer2">
            <div class="row">
                <a class="col m-3" href="http://127.0.0.1:5500/User/Member.html">Đội ngũ thành lập</a>
                <a class="col m-3" href="#">Quan hệ với nhà đầu tư</a>
                <a class="col m-3" href="#">Thông báo pháp lý</a>
                <a class="col m-3" href="#">Trung tâm đa phương tiện</a>
            </div>
            <div class="row">
                <a class="col m-3" href="#">Trung tâm trợ giúp</a>
                <a class="col m-3" href="#">Việc làm</a>
                <a class="col m-3" href="#">Tùy chọn cookie</a>
                <a class="col m-3" href="#">Quyền riêng tư</a>
            </div>
            <div class="row">
                <a class="col m-3" href="#">Thẻ quà tặng</a>
                <a class="col m-3" href="#">Điều khoản sử dụng</a>
                <a class="col m-3" href="#">Thông tin doanh nghiệp</a>
                <a class="col m-3" href="#">Liên hệ với chúng tôi</a>
            </div>
        </div>
        <div style="text-align:left; padding: 0px 10px 10px 10px; margin-left: 100px;">
            <span style="font-size: 12px; font-weight: 100; color: gray;">© 2003-2022 MovieRex, Inc.</span>
        </div>
    </div>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="/lib/Swiper/swiper-bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

