@model MovieRex.Models.MovieActor
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h1 class="m-4">Details</h1>
<div class="row ">
    <div class="col-lg-7 col-md-12 m-2">
        <div class="card" style="min-height: 485px">
            <div class="card-header card-header-text">
                <h4 class="card-title">Movie Actor</h4>
                @*<p class="category"></p>*@
            </div>
            <div class="card-content table-responsive">
                <div>
                    <h4>MovieActor</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Movie)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Movie.MovieID)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Actor)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Actor.Name)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
